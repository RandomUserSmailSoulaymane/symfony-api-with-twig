{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Symfony Dark{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
</head>
<body>
    <div class="page-container">
        <header class="header">
            <h1>My Symfony Site</h1>
            <nav class="nav-bar">
                <ul>
                    <li><a href="{{ path('login_page') }}">Login</a></li>
                    <li><a href="{{ path('register_page') }}">Register</a></li>
                    <li><a href="{{ path('articles_page') }}">Articles</a></li>
                    <li><a href="{{ path('products_page') }}">Produits</a></li>
                </ul>
            </nav>
        </header>


        <main class="main-content">
            {% block body %}{% endblock %}
        </main>
    </div>

    <footer class="footer">
        <p>&copy; 2025 - Dark Themed Symfony</p>
    </footer>

    {% block javascripts %}{% endblock %}
</body>
</html>
